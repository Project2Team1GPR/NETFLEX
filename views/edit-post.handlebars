<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-sm-6 mb-4">
      <section class="card text-center border-dark">
        <header class="card-header h4" style="background-color: black; color: white">Update Post</header>
        <div class="card-body">
          <form id="update-post">
            <input type="hidden" value="{{post.id}}" id="postId">
            <div class="card-body">
              <label for="postTitle"></label>
              <input type="text" id="postTitle" name="postTitle" value="{{post.title}}" class="form-control">
            </div>
            <div class="mb-3">
              <textarea class="form-control" id="postContent">{{post.contents}}</textarea>
            </div>
            <button class="btn btn-primary" style="background-color: black; color: #ffffff;" type="submit">Edit Post</button>
            <button class="btn btn-primary" style="background-color: black; color: #ffffff;" type="button" id="delete">Delete Post</button>
          </form>
        </div>
         <div class="card-footer"></div>
      </section>
    </div>
  </div>
</div>

<script src="/js/updatePost.js"></script>
<script src="/js/deletePost.js"></script>