<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Net.FLEX</title>
</head>
<body style="background-image: url('./assets/images/projectimage.png'); background-repeat: no-repeat; background-size: cover;  min-height: 100vh; margin: 0; background-position: center;">

<!-- Login Form -->
<section class="card login-card" id="loginCard" style="display: none;">
  <h2 class="page-title">Login</h2>
  <form class="form login-form">
    <!-- ... Your login form content ... -->
    <div class="mb-3">
      <label for="email-login" class="form-label">Email:</label>
      <input type="email" class="form-control" id="email-login" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="password-login" class="form-label">Password</label>
      <input type="password" class="form-control" id="password-login">
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <button type="button" class="btn btn-secondary" onclick="closeForm('loginCard')">Close</button>
  </form>
</section>

<!-- Signup Form -->
<section class="card signup-card" id="signupCard" style="display: none;">
  <h2 class="page-title">Sign Up!</h2>
  <form class="form signup-form">
    <!-- ... Your signup form content ... -->
    <div class="mb-3">
      <label for="username-signup" class="form-label">Username:</label>
      <input type="text" class="form-control" id="username-signup" aria-describedby="usernameHelp">
    </div>
    <div class="mb-3">
      <label for="email-signup" class="form-label">Email:</label>
      <input type="email" class="form-control" id="email-signup" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="password-signup" class="form-label">Password</label>
      <input type="password" class="form-control" id="password-signup">
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
    <button type="button" class="btn btn-secondary" onclick="closeForm('signupCard')">Close</button>
  </form>
</section>

<!-- Toggle Buttons -->
<div class="text-center mt-3">
  <button class="btn btn-primary" onclick="toggleForm('loginCard', 'signupCard')">Login</button>
  <button class="btn btn-primary" onclick="toggleForm('signupCard', 'loginCard')">Sign Up</button>
</div>

</body>
</html>

